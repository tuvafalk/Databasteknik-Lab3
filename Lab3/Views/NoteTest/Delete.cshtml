@model Lab3.Models.NoteDetail

<h1>Delete Note</h1>

<p>Are you sure you want to delete this note?</p>

<div>
    <h4>Note Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <!-- Display other note details similarly -->
    </dl>
</div>

@using (Html.BeginForm("Delete", "Note", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ID) <!-- Hidden field for note ID -->

    <p>
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", "Note", null, new { @class = "btn btn-default" })
    </p>
}
